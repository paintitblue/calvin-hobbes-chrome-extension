{
    "manifest_version": 2,
    "name": "Daily Calvin & Hobbes",
    "description": "Presenting you with the daily Calvin & Hobbes comic strip.",
    "version": "1.5",
    "browser_action": {
        "default_icon": "icon.png"
    },
    "icons": { 
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png" 
    },
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "http://www.gocomics.com/calvinandhobbes"
    ],
    "chrome_url_overrides": {
        "newtab": "page.html"
    }
}
